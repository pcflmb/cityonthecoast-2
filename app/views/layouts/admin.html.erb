<!-- app/views/layouts/admin.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Holidays on the Coast - Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'admin', "data-turbo-track": "reload", media: 'all' %>
  <%= javascript_include_tag 'admin', "data-turbo-track": "reload", defer: true %>
</head>
<body class="admin-body">
  <nav class="admin-nav">
    <div class="nav-brand">
      <h2>ğŸŒŠ Holidays on the Coast Admin</h2>
    </div>
    <ul class="nav-links">
      <li><%= link_to 'Events', admin_events_path %></li>
      <li><%= link_to 'View Public Site', root_path, target: '_blank' %></li>
    </ul>
  </nav>

  <main class="admin-main">
    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>

    <%= yield %>
  </main>
</body>
</html>
